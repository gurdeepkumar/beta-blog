<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
    <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "bg-info rounded shadow p-3 mb-3", data: { turbo: false } ) do |f| %>
        <div class= "form-group row m-2">
          <div class="col-2 text-light"><%= f.label 'Username'  %></div>
          <div class="col-10"><%= f.text_field :username, class: "form-control", placeholder: "Enter username" %></div>
        </div>
        <div class="form-group row m-2">
          <div class="col-2 text-light"><%= f.label 'Email' %></div>
          <div class="col-10"><%= f.text_field :email, class: "form-control", placeholder: "Enter email" %></div>
        </div>
        <div class="form-group row m-2">
          <div class="col-2 text-light"><%= f.label 'Password' %></div>
          <div class="col-10"><%= f.password_field :password, class: "form-control mb-3", placeholder: "Enter password" %></div>
        </div>
        <div class="row m-2 justify-content-center">
          <%= f.submit class: " col-6 btn btn-success "%>
        </div>
      <% end %>
    </div>
  </div>

</div>

