<h1>Article Index</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <% @articles.each do |article| %>
  <tbody>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td>
        <%= link_to 'Show', article_path(article) %>
        <%= link_to 'Edit', edit_article_path(article) %>
        <%= link_to 'Delete', article_path(article), data: { "turbo-method": :delete, turbo_confirm: "Are you sure ?" } %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
<p><%= link_to 'Create a new article', new_article_path  %></p>
<p><%= link_to 'Home Page', root_path %></p>
<p><%= link_to 'About Page', about_path %></p>