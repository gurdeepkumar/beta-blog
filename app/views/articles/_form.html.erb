<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
    <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: "bg-info rounded shadow p-3 mb-3", data: { turbo: false } ) do |f| %>
        <div class= "form-group row m-2">
          <div class="col-2 text-light"><%= f.label 'Title'  %></div>
          <div class="col-10"><%= f.text_field :title, class: "form-control", placeholder: "Enter email" %></div>
        </div>

        <div class="form-group row m-2">
          <div class="col-2 text-light"><%= f.label 'Description' %></div>
          <div class="col-10"><%= f.text_area :description, class: "form-control mb-3", rows: "10" %></div>
        </div>
        <div class="row m-2 justify-content-center">
          <%= f.submit class: " col-6 btn btn-success "%>
        </div>
      <% end %>
    </div>
  </div>

</div>

