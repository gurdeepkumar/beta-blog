<h1>Edit article</h1>

<% if @article.errors.any? %>
  <ul>
    <% @article.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <% end %>
  </ul>  
<% end %>

<%= form_with(model: @article, data: { turbo: false } ) do |f| %>
  <p>
    <%= f.label 'Title' %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label 'Description' %><br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<p><%= link_to 'Create a new article', new_article_path  %></p>
<p><%= link_to 'Articles Page', articles_path %></p>
<p><%= link_to 'Home Page', root_path %></p>
<p><%= link_to 'About Page', about_path %></p>